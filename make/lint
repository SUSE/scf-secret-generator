#!/bin/sh

set -o errexit

. make/include/colors.sh

printf "%b==> Linting%b\n" "${OK_COLOR}" "${ERROR_COLOR}"

ISSUES=$(mktemp)

trap "cat ${ISSUES} ; rm -f ${ISSUES}" EXIT

go list -f '{{ .Dir }}' ./... | sed '\@/vendor/@d ' | while read DIR; do
    golint $(ls "${DIR}"/*.go | grep -v _generated.go) >> "${ISSUES}"
done

printf "%b" "${NO_COLOR}"

test ! -s "${ISSUES}"
